













RewriteCond %{HTTP_HOST} ^(?:www\.)?domain\.(com|es)$
RewriteRule ^wp-admin https://secure.domain.%1/wp-admin/ [NC,QSA,END]


#REWRITE - for ([sub.domain.com/VAR] â†’ ignite.php?olink=VAR;
RewriteCond %{HTTP_HOST} ^(.+?)(\.(.+)\.(.+))$
RewriteRule ^((?!favicon.ico$)(?!favicon.png$)(?!asset\/.*$)(?!go\/.*$)(?!api\/.*$)(?!app\/.*$)(?!_ignore\/www\/.*$).*)$ /ignite.php?olink=$1&osd=%1 [NC,QSA,END]




RewriteRule ^asset\/$ source/asset/ [NC,QSA,END]
RewriteRule ^asset\/(.*)$ source/asset/$1 [NC,QSA,END]
	RewriteRule ^css\/(.*)$ source/asset/css/$1 [NC,QSA,END]
	RewriteRule ^icon\/(.*)$ source/asset/icon/$1 [NC,QSA,END]
	RewriteRule ^js\/(.*)$ source/asset/js/$1 [NC,QSA,END]
RewriteRule ^cloud\/(.*)$ source/cloud/$1 [NC,QSA,END]


RewriteRule ^data\/(.*)$ /ignite.php?olink=$1&oroute=data [NC,QSA,END]


#Rewrite all links to documents [routes to orax.php]
# RewriteRule ^(.*)$ $1.php [NC,QSA,END]
RewriteRule ^((?!favicon.ico$)(?!favicon.png$)(?!asset\/.*$)(?!css\/.*$)(?!icon\/.*$)(?!js\/.*$)(?!cloud\/.*$)(?!data\/.*$)(?!go\/.*$)(?!api\/.*$)(?!app\/.*$)(?!_ignore\/www\/.*$).*)$ /ignite.php?olink=$1 [NC,QSA,END]


